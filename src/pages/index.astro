  <script>
    // Buyer tabs
    document.querySelectorAll('.buyer-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.getAttribute('data-tab');
        // Update tabs
        document.querySelectorAll('.buyer-tab').forEach(t => {
          t.classList.remove('bg-ocean-700', 'text-white');
          t.classList.add('bg-white', 'text-gray-600', 'hover:bg-gray-100');
          t.setAttribute('aria-selected', 'false');
        });
        tab.classList.add('bg-ocean-700', 'text-white');
        tab.classList.remove('bg-white', 'text-gray-600', 'hover:bg-gray-100');
        tab.setAttribute('aria-selected', 'true');
        // Update panels
        document.querySelectorAll('.buyer-panel').forEach(p => p.classList.add('hidden'));
        const panel = document.getElementById(`panel-${target}`);
        if (panel) panel.classList.remove('hidden');
      });
    });

    // FAQ accordion
    document.querySelectorAll('.faq-toggle').forEach(toggle => {
      toggle.addEventListener('click', () => {
        const item = toggle.closest('.faq-item');
        if (!item) return;
        const content = item.querySelector('.faq-content');
        const icon = item.querySelector('.faq-icon');
        if (!content || !icon) return;

        const isOpen = !content.classList.contains('hidden');

        // Close all
        document.querySelectorAll('.faq-content').forEach(c => c.classList.add('hidden'));
        document.querySelectorAll('.faq-icon').forEach(i => i.classList.remove('rotate-45'));

        if (!isOpen) {
          content.classList.remove('hidden');
          icon.classList.add('rotate-45');
        }
      });
    });
  </script>

